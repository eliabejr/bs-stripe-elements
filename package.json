  "devDependencies": {
    "bs-platform": "2.1.0",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "reason-react": "0.3.0",
    "release-it": "^5.1.2"
  },
  "peerDependencies": {
    "reason-react": "0.3.0"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"],
    "src/**/*.re": ["refmt --in-place", "git add"]
