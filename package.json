  "keywords": ["react", "react-component", "reason-react", "bucklescript"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliabejr/bs-stripe-elements.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/eliabejr/bs-stripe-elements/issues"
  },
  "homepage": "https://github.com/eliabejr/bs-stripe-elements/readme",
  "scripts": {
    "precommit": "lint-staged",
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
